<UserControl x:Class="TestWpf.Views.SideBarViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Background="DarkSlateGray" MinWidth="150">
        <TextBlock Text="Menu" Foreground="White" FontSize="16" Margin="10,5" FontWeight="Bold"/>
        <Button Content="Dashboard" Command="{Binding OpenTabCommand}" CommandParameter="Dashboard" />
        <Button Content="Users" Command="{Binding OpenTabCommand}" CommandParameter="Users" />
        <Button Content="Billing" Command="{Binding OpenTabCommand}" CommandParameter="Billing" />
        <Button Content="Transactions" Command="{Binding OpenTabCommand}" CommandParameter="Transactions" />
        <Button Content="Settings" Command="{Binding OpenTabCommand}" CommandParameter="Settings" />
    </StackPanel>
</UserControl>
