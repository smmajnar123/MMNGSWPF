<UserControl x:Class="TestWpf.Views.UserPupUpViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#C5C5C5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,3,0,10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF5722"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF5722"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Soft Drop Shadow -->
        <DropShadowEffect x:Key="PopupShadow"
                          BlurRadius="18"
                          ShadowDepth="3"
                          Color="#55000000"/>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Border Background="White"
                CornerRadius="10"
                BorderBrush="#DADADA"
                BorderThickness="1"
                Padding="20"
                Width="320"
                Effect="{DynamicResource PopupShadow}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- Heading -->
                <TextBlock Text="Add / Update User"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF7043"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- INPUT FIELDS -->
                <TextBlock Text="Name" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="NameTextBox"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="EmailTextBox"/>

                <TextBlock Text="Phone" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="PhoneTextBox"/>

                <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="AddressTextBox"/>

                <TextBlock Text="Father Phone" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="FatherPhoneTextBox"/>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0"
                           >

                    <!-- Cancel -->
                    <Button Content="Cancel"
                            Width="90"
                            Height="32"
                            Background="#EEEEEE"
                            Foreground="#333"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            Click="CancelButton_Click"/>

                    <!-- Save -->
                    <Button Content="Save"
                            Width="110"
                            Height="32"
                            Background="#FF7043"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            Click="SaveButton_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
