<UserControl x:Class="TestWpf.Views.DashboardViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFe0f7fa" Offset="0"/>
                                <GradientStop Color="#FFb2ebf2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBlock for Card Title -->
        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <!-- TextBlock for Card Value -->
        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>

        <!-- TextBlock for Card Subtitle -->
        <Style x:Key="CardSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Admin Dashboard" FontSize="28" FontWeight="Bold" Foreground="#222" Margin="0,0,0,20"/>

            <!-- Summary Cards -->
            <UniformGrid Columns="3" Margin="0,0,0,20">
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Total Users" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="1,200" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="All registered users" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Active Users" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="950" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="Currently active users" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Total Money" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="$120,000" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="Total revenue collected" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recovery & New Joins -->
            <UniformGrid Columns="3" Margin="0,0,0,20">
                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Recovery This Month" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="$15,000" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="12% of target" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="New Joins" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="120" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="10% growth" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCard}">
                    <StackPanel>
                        <TextBlock Text="Pending Amount" Style="{StaticResource CardTitle}"/>
                        <TextBlock Text="$30,000" Style="{StaticResource CardValue}"/>
                        <TextBlock Text="25% remaining" Style="{StaticResource CardSubtitle}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Total Messages -->
            <Border Style="{StaticResource DashboardCard}">
                <StackPanel>
                    <TextBlock Text="Total Messages" Style="{StaticResource CardTitle}"/>
                    <TextBlock Text="5,400" Style="{StaticResource CardValue}"/>
                    <TextBlock Text="All-time messages count" Style="{StaticResource CardSubtitle}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
