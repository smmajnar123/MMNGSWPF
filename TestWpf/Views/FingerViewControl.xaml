<UserControl x:Class="TestWpf.Views.FingerViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="5" Margin="10">
        <Grid>
            <StackPanel Orientation="Vertical">
                <Image x:Name="picFinger" Width="Auto" Height="Auto" Stretch="Uniform"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
