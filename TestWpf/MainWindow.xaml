<Window x:Class="TestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf" 
        xmlns:views="clr-namespace:TestWpf.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="{x:Static local:MMNGSAppText.AppName}" Height="260" Width="420"
        Background="#F0F0F0">

    <Grid Background="#F0F0F0" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with subtle flat background -->
        <Border Grid.Row="0" Background="#2196F3" Padding="0">
            <views:HeaderViewControl DataContext="{Binding HeaderViewModel, Mode=TwoWay}" />
        </Border>

        <!-- Main content with flat 2D panel -->
        <Border Grid.Row="1" Background="#FFFFFF" Margin="5" Padding="5" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
            <views:MainViewControl DataContext="{Binding MainViewModel}" />
        </Border>

        <!-- Footer with flat 2D style -->
        <Border Grid.Row="2" Background="#ECECEC" Padding="5">
            <views:FooterViewControl />
        </Border>
    </Grid>
</Window>
