<Window x:Class="TestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf" 
        xmlns:views="clr-namespace:TestWpf.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
       Title="{x:Static local:MMNGSAppText.AppName}" Height="260" Width="420">

    <Grid Background="{StaticResource PrimaryBrush}" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <views:HeaderViewControl DataContext="{Binding HeaderViewModel, Mode=TwoWay}" Grid.Row="0"/>
        <views:MainViewControl DataContext="{Binding MainViewModel}" Grid.Row="1" ></views:MainViewControl>
        <views:FooterViewControl Grid.Row="2" ></views:FooterViewControl>
    </Grid>
</Window>
